<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. Theme.AppCompat.Light.DarkActionBar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. Theme.AppCompat.Light.DarkActionBar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="TitleButtonsToHome">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/logoseta_inv</item>
        <item name="android:scaleY">0.6</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CardViewsInServiceState2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="cardBackgroundColor">@color/WhiteBackGroud</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LayoutsCardsOptions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LayoutsCheckbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">5</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="TextUnidades">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CheckBoxsAndamio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4.5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:checked">true</item>
        <item name="android:checkMarkTint">@color/colorAccent</item>
    </style>

    <style name="LayoutFormularioStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LayoutFormularioStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="EditTextFormularioStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">50</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="CardsMainMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:outlineSpotShadowColor">@color/colorAccent</item>
    </style>

    <style name="MainButtons">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextMainMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <style name="BagsButtons">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bagbutton</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">""</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:textSize">16sp</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>

    <style name="DayButtons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/daybotton</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">""</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:textSize">56sp</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>

    <style name="EscaleraButtons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/escalerabutton</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">""</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:textSize">56sp</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>

    <style name="AndamioButtons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/andamiobutton</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">""</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:textSize">56sp</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>

    <style name="BagsNumbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">top|center</item>
    </style>

    <style name="BagsCardView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/BlackBackGroud</item>
    </style>

    <style name="MyTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:shadowColor">@color/BlackBackGroud</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
