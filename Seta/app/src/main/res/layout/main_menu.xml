<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:weightSum="3">

        <ImageView
            android:id="@+id/TittleImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/logoseta_inv"
            android:layout_marginTop="32dp"
            android:layout_weight="2"
            android:scaleX="1.3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Solicitud de Equipos para Trabajo en Altura"
            android:textSize="16sp"
            android:textColor="@color/cardview_light_background"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"/>

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:padding="0dp">


        <GridLayout
            android:id="@+id/MyViewConstraint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                style="@style/CardsMainMenu">

                <ImageButton
                    android:id="@+id/IconProgEscalera"
                    style="@style/MainButtons"
                    android:scaleX="0.4"
                    android:background="@drawable/calendario5_150x120" />

                <TextView
                    android:id="@+id/TextProgEscalera"
                    style="@style/TextMainMenu"
                    android:layout_height="wrap_content"
                    android:text="Nueva Solicitúd" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardsMainMenu">

                <ImageButton
                    android:id="@+id/IconMensajeria"
                    style="@style/MainButtons"
                    android:background="@drawable/moto_mensajeria3" />

                <TextView
                    android:id="@+id/TextMensajeria"
                    style="@style/TextMainMenu"
                    android:text="Mensajería" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardsMainMenu">

                <ImageButton
                    android:id="@+id/IconActEstado"
                    style="@style/MainButtons"
                    android:background="@drawable/actualizarestado7"/>

                <TextView
                    android:id="@+id/TextActEstado"
                    style="@style/TextMainMenu"
                    android:text="Gestión de servicios" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardsMainMenu">

                <ImageButton
                    android:id="@+id/IconGenerarRuta"
                    style="@style/MainButtons"
                    android:background="@drawable/generarruta2" />

                <TextView
                    android:id="@+id/TextGenerarRuta"
                    style="@style/TextMainMenu"
                    android:text="Ruta" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardsMainMenu"
                android:layout_marginBottom="32dp">

                <ImageButton
                    android:id="@+id/IconConsultas"
                    style="@style/MainButtons"
                    android:background="@drawable/conocerdisponibilidad5"/>

                <TextView
                    android:id="@+id/TextConsultas"
                    style="@style/TextMainMenu"
                    android:text="Consultas" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardsMainMenu"
                android:layout_marginBottom="32dp">

                <ImageButton
                    android:id="@+id/IconConsInventario"
                    style="@style/MainButtons"
                    android:background="@drawable/inventarioescaleras4"/>

                <TextView
                    android:id="@+id/TextConsInventario"
                    style="@style/TextMainMenu"
                    android:text="inventario" />

            </androidx.cardview.widget.CardView>


        </GridLayout>


    </ScrollView>

</LinearLayout>

